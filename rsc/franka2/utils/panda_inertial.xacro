<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panda_inertial">
    <xacro:macro name="inertial" params="mass:='0' xyz:='0 0 0' rpy:='0 0 0' ixx:='0.3' ixy:='0.0' ixz:='0.0' iyy:='0.3' iyz:='0.0' izz:='0.3'">
        <inertial>
            <mass value="${mass}"/>
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <inertia ixx="${ixx}" ixy="${ixy}" ixz="${ixz}" iyy="${iyy}" iyz="${iyz}" izz="${izz}" />
        </inertial>
    </xacro:macro>
</robot>